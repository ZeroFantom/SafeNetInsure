<div class="top-row ps-3 navbar navbar-dark">
    <Container class="container-fluid">
        <a class="navbar-brand" href="">SafeNetInsureWebApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <Icon Name="IconName.BookReader"/>
        </button>
    </Container>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <Icon Name="IconName.Home" aria-hidden="true"></Icon>
                <Text Margin="@(new FluentMargin().Is3)">Главная</Text>
            </NavLink>
        </div>
        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/user_service/policy" Match="NavLinkMatch.All">
                    <Icon Name="IconName.Server" aria-hidden="true"></Icon>
                    <Text Margin="@(new FluentMargin().Is3)">Мои Страхования</Text>
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Policy="AdminPolicy">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/user_service/administration" Match="NavLinkMatch.All">
                    <Icon Name="IconName.Copyright" aria-hidden="true"></Icon>
                    <Text Margin="@(new FluentMargin().Is3)">Пользователи</Text>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/user-role_service/administration" Match="NavLinkMatch.All">
                    <Icon Name="IconName.Book" aria-hidden="true"></Icon>
                    <Text Margin="@(new FluentMargin().Is3)">Роли</Text>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/policy_service/administration" Match="NavLinkMatch.All">
                    <Icon Name="IconName.Server" aria-hidden="true"></Icon>
                    <Text Margin="@(new FluentMargin().Is3)">Страхования</Text>
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {

    [Inject] public IHttpContextAccessor ContextAccessor { get; set; }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}